<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- 상단 이미지 -->
        <ImageView
            android:id="@+id/imageViewHeader"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:contentDescription="Message Icon"
            android:layout_marginBottom="24dp"
            android:scaleType="centerInside" />

        <!-- 제목 -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빠르게 연락해보세요"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:layout_marginBottom="8dp" />

        <!-- 부제목 -->
        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일이나 카카오톡으로 빠르게 소통하세요."
            android:textSize="15sp"
            android:textColor="#666666"
            android:layout_marginBottom="32dp"
            android:lineSpacingExtra="4dp" />

        <!-- 카드 컨테이너 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/rounded_card"
            android:elevation="6dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- 이메일 버튼 -->
            <Button
                android:id="@+id/btn_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="이메일 열기"
                android:textSize="17sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/btn_background_blue"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="14dp"
                android:layout_marginBottom="20dp"
                android:elevation="4dp" />

            <!-- 카카오톡 버튼 -->
            <Button
                android:id="@+id/btn_kakao"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="카카오톡 열기"
                android:textSize="17sp"
                android:textColor="#3C1E1E"
                android:fontFamily="sans-serif-medium"
                android:background="@drawable/btn_background_kakao"
                android:drawableStart="@drawable/ic_kakao"
                android:drawablePadding="14dp"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
